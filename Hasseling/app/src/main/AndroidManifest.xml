<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.pxl.hasseling">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RestaurantActivity" />
        <activity android:name=".activity.SupermarketActivity" />
        <activity android:name=".activity.LaundryActivity" />
        <activity android:name=".activity.DrinkActivity" />
        <activity android:name=".activity.TransportActivity" />
        <activity android:name=".activity.ClubActivity" />
        <activity android:name=".activity.FitnessActivity" />
        <activity android:name=".activity.TodoActivity" />
        <activity
            android:name=".activity.SupermarketDetailsActivity"
            android:parentActivityName=".activity.SupermarketActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="be.pxl.hasseling.activity.SupermarketActivity" />
        </activity>
    </application>

</manifest>