<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.pxl.hasseling.MainActivity"
    android:id="@+id/content_frame"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        android:fillViewport="true"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <Button
                    android:id="@+id/btn_supermarket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:width="370dp"
                    android:drawableLeft="@drawable/ic_supermarket"
                    android:gravity="left|center_vertical"
                    android:text="Supermarket"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/btn_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:width="370dp"
                    android:drawableLeft="@drawable/ic_restaurant"
                    android:gravity="left|center_vertical"
                    android:text="Restaurant"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <Button
                    android:id="@+id/btn_laundry"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:drawableLeft="@drawable/ic_laundry"
                    android:gravity="left|center_vertical"
                    android:text="@string/laundry"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/btn_drink"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_drink"
                    android:gravity="left|center_vertical|center"
                    android:text="@string/drink"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <Button
                    android:id="@+id/btn_transport"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_transport"
                    android:gravity="left|center_vertical|center"
                    android:text="Transport"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/btn_club"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_club"
                    android:gravity="left|center_vertical|center"
                    android:text="Club"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <Button
                    android:id="@+id/btn_fitness"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_fitness"
                    android:gravity="left|center_vertical|center"
                    android:text="Fitness"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <Button
                    android:id="@+id/btn_todo"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_todo"
                    android:gravity="left|center_vertical|center"
                    android:text="To Do"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
