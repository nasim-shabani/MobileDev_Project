<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_categorie_imageview"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/list_item_categorie_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/actionModeBackground"
        android:backgroundTint="@color/colorBg"
        android:contentDescription="imgSupermarket"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_categorie_textview"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textAlignment="center"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></TextView>

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:progressTint="@android:color/holo_red_light"
        android:progressTintMode="src_atop"
        android:rating="3"
        android:stepSize="0.01" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ratingBar"
        android:layout_toStartOf="@+id/ratingBar"
        android:text="TextView"
        android:textSize="12sp" />

</RelativeLayout>