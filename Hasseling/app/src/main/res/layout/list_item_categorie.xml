<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_categorie_imageview"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/list_item_categorie_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_image" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item_categorie_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_item_categorie_imageview"
        android:layout_toRightOf="@+id/list_item_categorie_imageview"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textAlignment="center"></TextView>

</RelativeLayout>